model Gender {
  id          String   @id @default(uuid())
  gender      String   @unique

  // Relationships
  components  NameComponent[] @relation("GenderToComponent")
}

model Style {
  id          String   @id @default(uuid())
  style        String   @unique
  
  // Relationships
  components  NameComponent[] @relation("StyleToComponent")
}